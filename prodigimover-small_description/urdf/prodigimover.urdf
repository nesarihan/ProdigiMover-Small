    <!-- GAZEBO PLUGINS -->
    <gazebo reference="wheel_front_right_link">
      <material value="Gazebo/FlatBlack"/>
      <mu1>1.16</mu1>
      <mu2>1.16</mu2>
      <kp>5000000.0</kp>
      <kd>10.0</kd>
      <maxVel>4.0</maxVel>
      <fdir1>0 0 0</fdir1>
      <turnGravityOff>false</turnGravityOff>
    </gazebo>   

    <gazebo reference="wheel_front_left_link">
      <material value="Gazebo/FlatBlack"/>
      <mu1>1.16</mu1>
      <mu2>1.16</mu2>
      <kp>5000000.0</kp>
      <kd>10.0</kd>
      <maxVel>4.0</maxVel>
